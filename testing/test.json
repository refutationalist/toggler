{
    "TOGGLER": true,
	"statefile": "/tmp/toggler.state",
	"sshd": {
		"check":"/home/sam/projects/studmufn/toggler/scripts/systemd_service_state.php sshd",
		"states": {
			"active": {
				"color":"green",
				"text":"SSH Running",
				"cmd":"sudo systemctl stop sshd"
			},
			"inactive": {
				"color":"red",
				"text":"SSH Stopped",
				"cmd":"sudo systemctl start sshd"
			},
			"noservice": {
				"color":"orange",
				"text":"No SSH Service"
			}
		}
	},
    "sleepone": {
        "check": "./switch.php check one",
		"delay": 5000,
        "states": {
            "0": {
                "color": "red",
                "text": "One Offline",
				"cmd": "./switch.php toggle one on"
            },
            "1": {
                "color": "green",
                "text": "One Online",
				"cmd": "./switch.php toggle one off"
            }
        }
    },
