{
    "TOGGLER": true,
	"title": "Example Toggler",
	"port": 8888,
	"sshd": {
		"check":"/home/sam/Code/toggler/scripts/systemd_service_state.php sshd",
		"states": {
			"active": {
				"color":"green",
				"text":"SSH Running",
				"cmd":"sudo systemctl stop sshd"
			},
			"inactive": {
				"color":"red",
				"text":"SSH Stopped",
				"cmd":"sudo systemctl start sshd"
			},
			"noservice": {
				"color":"orange",
				"text":"No SSH Service"
			}
		}
	},
    "sleepone": {
